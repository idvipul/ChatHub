<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Day Mode(Light Theme) -->
    <style name="AppThemeDayMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorButtonNormal">@drawable/button_selector</item>
        <item name="colorButtonNormal">@drawable/button_selector</item>
        <item name="android:buttonStyle">@style/ChatHubButtonStyle</item>

        <item name="dayNightModeButton">@drawable/ic_moon</item>
        <item name="micButton">@drawable/ic_my_mic_black</item>
        <item name="cameraButton">@drawable/ic_my_camera_black_24px</item>
        <item name="locationButton">@drawable/ic_my_location_black_24px</item>
        <item name="imageButton">@drawable/ic_image_black_24px</item>
        <item name="sendButton">@drawable/ic_send_black_24</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Night Mode(Dark Theme) -->
    <style name="AppThemeNightMode" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorButtonNormal">@drawable/button_selector</item>
        <item name="colorButtonNormal">@drawable/button_selector</item>
        <item name="android:buttonStyle">@style/ChatHubButtonStyle</item>

        <item name="dayNightModeButton">@drawable/ic_sun</item>
        <item name="micButton">@drawable/ic_my_mic_white</item>
        <item name="cameraButton">@drawable/ic_my_camera_white_24px</item>
        <item name="locationButton">@drawable/ic_my_location_white_24px</item>
        <item name="imageButton">@drawable/ic_image_white_24px</item>
        <item name="sendButton">@drawable/ic_send_white_24</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="ChatHubButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>